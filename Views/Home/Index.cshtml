@model IEnumerable<DockerEssentials.Models.Produto>

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <title>Lista de produtos</title>
    <meta charset="utf-8">
</head>

<body>
    <h4>@ViewBag.Message</h4>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Categoria</th>
                <th scope="col">Preço</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.ProdutoId</th>
                        <td>@item.Nome</td>
                        <td>@item.Categoria</td>
                        <td>@item.Preco</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</body>

</html>